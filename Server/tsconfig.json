{
    "compilerOptions": {
        "outDir": "./dist", // Källkoden kompileras till 'dist'
        "rootDir": "./", // Rötter är nu i rotmappen (Server/)
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "*.ts" // Inkludera alla TS-filer i rotmappen
    ],
    "exclude": [
        "node_modules",
        "dist" // Exkludera node_modules och dist från kompilering
    ]
}
